@model Project
<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>
<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label>Group Name:</label><input asp-for="GroupName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Group Size:</label><input asp-for="GroupSize" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email Address:</label><input asp-for="EmailAddress" class="form-control" />
    </div>
    <div class="form-group">
        <label>Date and Time:</label><input asp-for="DayTime" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number:</label><input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>
