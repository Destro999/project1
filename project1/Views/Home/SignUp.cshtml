@{
}
@model TourTimes

<div>
    <table class="table table-secondary table-bordered table-hover table-sm">
        <thead class="thead-dark">
            <!--Sets the table column names-->
            <tr><th>Date/Time</th><th>Create Appointment</th></tr>
        </thead>
        <tbody>
            @foreach (var x in Model.TimeSlots)
            {
                <tr>
                    <td>@x.Time</td>
                    <td>
                        <form id="@Model.TimeSlots" asp-page="/Appointment" method="post">
          
                            <span class="card-text p-1">

                                <button type="submit" class="btn-success btn-sm pull-right" style="float:right">Set Appointment</button>
                            </span>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>