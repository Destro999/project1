@{
}
@model TourTimes

<!--Header-->
<center><h2>Appointment Times</h2>
    <h4>Please select a day and a time for a tour of the Layton, Utah temple.</h4>

    <div>

        @foreach (var x in Model.TimeSlots)
        {
            <div>
                <!--Buttons for each time M-Sa, 8AM-8PM-->
                <form id="@Model.TimeSlots" asp-action="SignUp" method="post">
                    <input type="hidden" asp-for="@x.Time" name="time" />
                    <span class="card-text p-1">
                        <button type="submit" class="btn-success btn-sm">@x.Time</button>

                    </span>
                </form>
            </div>
            <br />
        }

    </div>
</center>
